#!/usr/bin/env bash

#sets workspaces for each monitor ORDER DOES MATTER
# bspc monitor HDMI-0 -d 1 2 3 4 5 
# bspc monitor DP-0 -d 6 7 8 9  



bspc monitor DP-4 -d 1 2
bspc monitor DP-0 -d 3 4
bspc monitor HDMI-0 -d 5 6


bspc config border_width        2
bspc config window_gap          6
bspc config bottom_padding		0

# source the colors generated by pywal
. "${HOME}/.cache/wal/colors.sh"

# Set the border colors.
bspc config normal_border_color "$color1"
bspc config active_border_color "$color2"

# too bright bspc config focused_border_color "$color15"
bspc config presel_feedback_color "$color1"

#i can't live without this setting now
bspc config focus_follows_pointer false
bspc config point_follows_monitor true

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config single_monocle	 true

bspc rule -a Screenkey manage=off
#bspc rule -a teamspeak3 desktop='^4'

#enable desktop notifications
bspc rule -a Dunst layer='above'
#fix autistic origin issue
bspc rule -a "origin.exe" state=floating
#fix steam friends
bspc config external_rules_command /home/papu/scripts/bspwm_ex_rules/steam_friends.sh

bspc rule -a "sdlgame" state=floating
#bspc rule -a discord desktop=^5

#launch noise supression
cadmus &

#obs (for using replay and whatnot)
obs &

setxkbmap -option caps:super > ~/.logs/setxkbmap.log 2>&1 &
sxhkd -c ~/.config/sxhkd/sxhkdrc > ~/.logs/sxhkd.log 2>&1 &
sh ~/.config/polybar/launch.sh &


#discover - discord overlay
#sleep 25; discover-overlay > ~/.logs/discover-overlay.log 2>&1 &


#launch discord
bspc desktop --focus ^5
discord --start-minimized > /home/papu/.logs/discord.log 2>&1 &

prospect &


